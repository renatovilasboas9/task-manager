{
  "name": "task-manager",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "run-global": "tsx scripts/run-global.ts",
    "run-task": "tsx scripts/run-task.ts",
    "run-domain": "tsx scripts/run-domain.ts",
    "generate-report": "tsx scripts/generate-report.ts",
    "e2e": "node --import tsx/esm ./node_modules/.bin/cucumber-js --config cucumber.config.js",
    "e2e:headed": "node --import tsx/esm ./node_modules/.bin/cucumber-js --config cucumber.config.js --format progress-bar",
    "run-e2e": "tsx scripts/run-e2e.ts",
    "e2e:quick": "tsx scripts/run-e2e-quick.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-istanbul": "^1.1.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "fast-check": "^3.15.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  }
}
